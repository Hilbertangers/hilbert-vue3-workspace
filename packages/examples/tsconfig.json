{
  "extends": "@vue/tsconfig/tsconfig.dom.json", // Vue 官方推荐基线
  "compilerOptions": {
    /* -------------- 项目定位 -------------- */
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    /* -------------- 模块系统 -------------- */
    "module": "ESNext",
    "moduleResolution": "bundler", // = vite / rollup / webpack 5 规则
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    /* -------------- JSX / Vue -------------- */
    "jsx": "preserve", // 交给 @vitejs/plugin-vue 处理
    "jsxImportSource": "vue", // <script setup lang="tsx">
    /* -------------- 路径别名（示例）--------- */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ] // src = Vite 的 resolve.alias:"@": fileURLToPath(new URL('./src', import.meta.url))
    },
    /* -------------- 类型安全 & Lint--------- */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true // 提升 tsc 速度
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "*.d.ts" // env.d.ts / vite-env.d.ts
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
